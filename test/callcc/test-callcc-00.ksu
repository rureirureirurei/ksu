;49
;Backtracking 
(define cont-stack '())

(define (choose options)
  (let/cc k
    (set! cont-stack (pair (pair k (snd options)) cont-stack))
    (fst options)
  )
)

(define cnt 0)

(define (fail)
  (if (null? cont-stack)
      (print cnt)
      (let* ([top (fst cont-stack)] [k (fst top)] [options (snd top)])
        (begin
          (set! cont-stack (snd cont-stack))
          (if (null? options)
              (fail)
              (begin
                (set! cont-stack (pair (pair k (snd options)) cont-stack))
                (k (fst options))
              )
          )
        )
      )
  )
)

(define (triples)
  (let* ([ns (range 20)]
        [a (choose ns)]
        [b (choose ns)]
        [c (choose ns)])
    ;(display (list a b c))
    (if (eq? (+ (* b b) (* c c)) (* a a)) (set! cnt (+ 1 cnt)) '())
    (fail)
  )
)

(triples)
