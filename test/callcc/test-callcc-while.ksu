(define (while c body)                                                                                            
    (let* ([k (call/cc k' k')]                                                                                        
        [res (if (c)                                                                                            
                (begin                                                                                             
                    (body)                                                                                         
                    (k k))                                                                                   
                nil)])                                                                                             
        nil))  

(define n (box 0))                                                                                                   
(while                                                                                                               
    (lambda () (< (! n) 10))                                                                                         
    (lambda () (begin                                                                                                
        (print (! n))                                                                                                
        (set! n (+ 1 (! n))))))   